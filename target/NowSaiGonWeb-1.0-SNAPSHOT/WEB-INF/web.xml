<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomeServelet</servlet-name>
        <servlet-class>control.HomeServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryServelet</servlet-name>
        <servlet-class>control.CategoryServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailServelet</servlet-name>
        <servlet-class>control.DetailServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServelet</servlet-name>
        <servlet-class>control.SearchServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServelet</servlet-name>
        <servlet-class>control.LoginServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServelet</servlet-name>
        <servlet-class>control.RegisterServelet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServelet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServelet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailServelet</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServelet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServelet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServelet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
